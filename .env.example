# Nexus Bank Environment Configuration
# Copy this file to .env and fill in the values

# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True

# IP Geolocation (optional - for country detection in risk module)
IPINFO_TOKEN=your_ipinfo_token_here

# AI Security Analysis (optional - enables Gemini incident analysis)
# Get your API key from: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# Database (for production - SQLite is used by default for development)
# DATABASE_URL=postgres://user:password@localhost:5432/nexus_bank
